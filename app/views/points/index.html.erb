<h1>High Scores</h1>

<div class = "container pro-1">

  <% Game.all.each do |game| %>
  <h5>Game: <%= game.name %></h5>

  <% User.all.each do |user| %>
  <% if user.points.where(game_id: game.id).length > 0 %>

  <p>
    <strong>Username: </strong><%= user.username %> - <%= user.points.where(game_id:game.id).max_by{|point| point.score.to_i}.score %>
  </p>

  <% end %>
  <% end %>
  <% end %>
</div>
